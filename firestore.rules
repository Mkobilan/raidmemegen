rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection & all explicit subcollections
    match /users/{userId} {
      // ✅ FIX: Allow public read access for profiles, but keep write restricted to owner
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
      
      // ✅ FIX: Explicitly allow the "raids" subcollection
      match /raids/{raidId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Allow votes subcollection
      match /votes/{voteId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Gallery collection (Community submissions)
    match /gallery/{docId} {
      allow read: if true; // Public can view
      allow create: if request.auth != null; // Users can submit
      allow update: if request.auth != null; // Users can vote (update count)
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid; // Owner can delete
    }
  }
}
