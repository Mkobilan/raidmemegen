{
  "root": true,
  "env": {
    "node": true,
    "es2021": true
  },
  "parserOptions": {
    "sourceType": "script"
  },
  "extends": [
    "eslint:recommended"
  ],
  "ignorePatterns": [
    "**/node_modules/*"
  ],
  "globals": {
    "require": "readonly",
    "exports": "writable",
    "module": "writable"
  },
  "rules": {
    "no-console": "off",
    "no-undef": "off"
  }
}